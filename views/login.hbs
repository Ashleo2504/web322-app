<!-- Heading for the login page -->
<h2>User Login</h2>

<!-- Display an error message if one exists (sent from the server) -->
{{#if errorMessage}}
  <div class="alert alert-danger">
    <strong>Error:</strong> {{errorMessage}}
  </div>
{{/if}}

<!-- Login form that sends POST request to /login route -->
<form method="POST" action="/login">

  <!-- Username input field -->
  <div class="form-group">
    <!-- Prefill with userName if available (in case of form re-render after error) -->
    <input 
      type="text" 
      name="userName" 
      placeholder="User Name" 
      class="form-control" 
      value="{{userName}}" 
      required
    >
  </div>

  <!-- Password input field -->
  <div class="form-group">
    <input 
      type="password" 
      name="password" 
      placeholder="Password" 
      class="form-control" 
      required
    >
  </div>

  <!-- Submit button to log in -->
  <button type="submit" class="btn btn-primary">Login</button>

</form>
