<div class="row">
  <section class="main col-md-9">
    <!-- Only show the <item> if there is a post to display -->
    {{#if data.item}}
      <item>
        <div class="row">
          <div class="col-4">
            <!-- Show the current post title -->
            <h2>{{data.item.title}}</h2>
            <!-- Show the feature image of the current post -->
            <img src="{{data.item.featureImage}}" alt="feature Image" style="width:100%" />
          </div>

          <div class="col-8">
            <br /><br />
            <div class="row">
              <div class="col-12">
                <!-- Use the #safeHTML block helper to render the post body -->
                {{#safeHTML}}
                  {{data.item.body}}
                {{/safeHTML}}
                <br /><br />
                <strong>Price:</strong> ${{data.item.price}}<br />
                <strong>Category:</strong> {{data.item.category}}<br />
                <strong>Last Updated:</strong> {{data.item.postdate}}
              </div>
            </div>
          </div>
        </div>
      </item>
    {{else}}
      <!-- Display a message if no post is available -->
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    <!-- Only show the Items list if there are items to display -->
    {{#if data.items}}
      <h4>Items</h4>
      <ul class="list-group">
        {{#each data.items}}
          <a href="/shop/{{this.id}}?category={{../viewingCategory}}" class="list-group-item">{{this.title}}</a>
        {{/each}}
      </ul>
    {{/if}}

    <!-- Only show the Categories list if there are categories to display -->
    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{this.id}}" class="list-group-item">{{this.name}}</a>
        {{/each}}
      </ul>
    {{/if}}
  </aside>
</div>
