<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />

        {{#if message}}
        <div class="alert alert-danger">
            {{message}}
        </div>
        {{/if}}

        {{#if items.length}}
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Actions</th> <!-- New header for actions -->
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>
                            <a href="/items?category={{this.category}}">{{this.category}}</a>
                        </td>
                        <td>${{this.price}}</td>
                        <td>
                            <!-- "Remove" button that links to the delete route -->
                            <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/if}}

        <!-- Button to Add Item -->
        <a href="/items/add" class="btn btn-success pull-right">Add Item</a>
    </div>
</div>
